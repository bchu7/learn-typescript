{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",

    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "**/dist/**",
    "**/gen/openapi/**",
    "**/jest.*.ts",
    "**/node_modules/**"
  ]
}

