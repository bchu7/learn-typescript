{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,    
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "skipLibCheck": true,
  },
  "types": [], // Ensures no @types/ are unintentionally included
  "exclude": [
    "**/dist/**",
    "**/gen/openapi/**",
    "**/jest.*.ts",
    "**/node_modules/**"
  ]
}